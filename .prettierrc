{
  "semi": true,
  "useTabs": true,
  "tabWidth": 4,
  "printWidth": 120,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "trailingComma": "all",
  "bracketSpacing": true,
  "arrowParens": "always",
  "bracketSameLine": false,
  "useEditorConfig": true,
  "endOfLine": "lf",
  "importOrder": [
    "",
    "^(react/(.*)$)|^(react$)",
    "^(next/(.*)$)|^(next$)",
    "^@reduxjs/(.*)$",
    "<THIRD_PARTY_MODULES>",
    "",
    "^@/(.*)/app",
    "^@/(.*)/app/(.*)$",
    "^@/(.*)/core/(.*)$",
    "",
    "^@/(.*)/pages-lib/(.*)$",
    "",
    "^@/(.*)/widgets/(.*)$",
    "^@/(.*)/features/(.*)$",
    "^@/(.*)/entities/(.*)$",
    "^@/(.*)/shared/(.*)$",
    "^@/(.*)/shared/const/(.*)$",
    "^@/(.*)/shared/hooks/(.*)$",
    "^@/(.*)/shared/server/(.*)$",
    "^@/(.*)/shared/types/(.*)$",
    "^@/(.*)/shared/ui/(.*)$",
    "",
    "^@x/(.*)$",
    "^@x/step-form",
    "^@x/notify",
    "^@/types",
    "^@/icons",
    "^@x/styles",
    "^@x/tools",
    "^@x/ui/components",
    "^@x/ui",
    "",
    "^@/styles/(.*)$",
    "",
    "^[./]",
    ""
  ],
  "importOrderParserPlugins": [
    "typescript",
    "jsx",
    "decorators-legacy"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "plugins": [
    "@ianvs/prettier-plugin-sort-imports"
  ]
}
